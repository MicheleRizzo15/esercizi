            printf("*        *\n");
            printf("*        *\n");
            printf("*        *\n");
            printf("*        *\n");
            printf("*        *\n");
            printf("*        *\n");
            printf("**********\n");  
        }
    }
    if(numero>10)
    printf("Il numero da te inserito supera il limite computazionale compreso tra i valori 3 e 10\n");
